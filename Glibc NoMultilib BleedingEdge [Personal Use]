### Gentoo: glibc + nomultilib + bleeding edge

COMMON_FLAGS="-march=native -O2 -pipe -fomit-frame-pointer"
CFLAGS="${COMMON_FLAGS}"
CXXFLAGS="${COMMON_FLAGS}"
FCFLAGS="${COMMON_FLAGS}"
FFLAGS="${COMMON_FLAGS}"

RUSTFLAGS="${RUSTFLAGS} -C target-cpu=native"
MAKEOPTS="-j12 -l12" ### 12 Threads !!!
USE="wayland X pipewire vaapi vulkan dbus bluetooth drm alsa elogind udev pulseaudio openrc dracut grub -debug -test -wifi -gnome -cinnamon -kde -dvd -seatd -cdr -cups -abi_86_32 -nls -systemd -man"

